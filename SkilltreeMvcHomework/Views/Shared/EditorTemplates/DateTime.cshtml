@model DateTime?
@{
    //var value = Model?.ToString("yyyy-MM-dd HH:mm") ?? "";
    var value = Model.HasValue ? Model.Value.ToString("yyyy-MM-dd HH:mm") : "";
}

@Html.TextBox("", value, new
{
    @class = "form-control",
    data_datetimepicker = "y",
    date_format = "YYYY-MM-dd HH:mm",
    placeholder = "日期 e.g. 2016-01-01 12:00"
})